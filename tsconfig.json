{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@src/background/log": ["cli/shims/log.ts"],
      "@src/*": ["chrome-extension/src/*"],
      "@extension/*": ["packages/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["cli", "chrome-extension/src/background/*", "chrome-extension/src/background/**/*"]
}
